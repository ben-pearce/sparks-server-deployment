{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "github-actions": {
    "enabled": false
  },
  "repositories": ["ben-pearce/sparks-server-deployment"],
  "packageRules": [
    {
      "matchDatasources": "docker",
      "matchPackageNames": ["lscr.io/linuxserver/**"],
      "versioning": "regex:^v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?(?:-|\\.)?(?<revision>.+)?-ls(?<build>\\d+)$"
    }
  ]
}